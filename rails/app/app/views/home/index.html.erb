<div class="container w-75 mw-100">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Total User Count</h5>
          <h3 class="card-subtitle mb-2 text-muted">Number of rows in the users table</h6>
          <h3 class="card-text" id="userCount">0</p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Total Error Count</h5>
          <h3 class="card-subtitle mb-2 text-muted">Number of errors seen</h6>
          <h3 class="card-text" id="errorCount">0</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
        <canvas id="latencyChart"></canvas>
    </div>
  </div>
</div>

<script>
const ctx = document.getElementById('latencyChart');
const latencyChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
            label: '# of Votes',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        },
        responsive: true
    }
});

var totalError = 0;

function insertUser() {
  var startTime = performance.now()
  var userData = {name:"Manan"};
  Rails.ajax({
    type: "POST",
    url: "/users",
    data: userData,
    success: function(data) {
      var endTime = performance.now()
      // console.log(`Inserting 1 row took ${endTime - startTime} milliseconds`)
    },
    error: function(data) {
      totalError += 1;
      document.getElementById('errorCount').innerHTML=`${totalError}`
    }
  })
}

function updateTotalUserCount(){
  Rails.ajax({
    type: "GET",
    url: "/gettotalcount",
    success: function(data) {
      document.getElementById('userCount').innerHTML=`${data}`
    }
  })
}

updateTotalUserCount()
setInterval(insertUser, 1000);
setInterval(updateTotalUserCount, 1000);
</script>